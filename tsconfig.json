{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "useDefineForClassFields": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "declaration": true,
	"skipLibCheck": true
    },
    "exclude": [
        "./node_modules",
        "./dist/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}
